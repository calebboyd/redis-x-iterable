{
  "compilerOptions": {
    "target": "es2018",
    "outDir": "lib/es2018",
    "module": "ES2015",
    "moduleResolution": "node",
    "declaration": true,
    "skipLibCheck": true,
    "lib": [
      "dom",
      "es2018"
    ],
    
    "strict": true,
    "allowSyntheticDefaultImports": true,
    "esModuleInterop": true,
    "inlineSourceMap": true,
    "experimentalDecorators": true,
    "emitDecoratorMetadata": true
  },
  "exclude": [
    "node_modules"
  ],
  "include": [
    "src/**/*.ts"
  ]
}