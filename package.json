{
  "name": "redis-x-stream",
  "version": "1.2.0",
  "license": "MIT",
  "main": "./lib/commonjs/stream.js",
  "exports": {
    ".": {
      "import": "./lib/es2018/stream.js",
      "require": "./lib/commonjs/stream.js"
    }
  },
  "type": "module",
  "scripts": {
    "build": "rm -rf lib && npm run lint && npm run compile",
    "docs": "typedoc src/stream.ts --excludePrivate",
    "compile": "tsc && npm run compile:commonjs",
    "compile:commonjs": "tsc --module commonjs --outDir ./lib/commonjs && echo '{\"type\": \"commonjs\"}' > lib/commonjs/package.json",
    "commitlint": "commitlint -f $(git rev-list --tags --max-count=1) -t $(git log --pretty=%H | head -1)",
    "lint": "eslint \"src/**/*\" --fix --ext \"*.ts\"",
    "prepublishOnly": "npm run build",
    "coverage": "npm run test -- --collectCoverage",
    "test": "npm run commitlint && jest",
    "watch:test": "jest --watchAll",
    "watch:typescript": "tsc -w"
  },
  "files": [
    "lib",
    "!**/*.spec.js"
  ],
  "jest": {
    "resolver": "jest-ts-webcompat-resolver",
    "preset": "ts-jest",
    "testPathIgnorePatterns": [
      ".*\\.js",
      ".*\\.util\\.spec"
    ]
  },
  "dependencies": {
    "debug": "^4.3.1",
    "ioredis": "^4.22.0"
  },
  "peerDependencies": {
    "@types/ioredis": "^4"
  },
  "peerDependenciesMeta": {
    "@types/ioredis": {
      "optional": true
    }
  },
  "devDependencies": {
    "@calebboyd/semantic-release-config": "^1.0.1",
    "@commitlint/cli": "^11.0.0",
    "@commitlint/config-angular": "^11.0.0",
    "@types/debug": "^4.1.5",
    "@types/ioredis": "^4.17.7",
    "@types/jest": "^26.0.20",
    "@types/node": "^14.14.25",
    "@typescript-eslint/eslint-plugin": "^4.15.0",
    "@typescript-eslint/parser": "^4.15.0",
    "eslint": "^7.19.0",
    "eslint-config-prettier": "~7.2.0",
    "eslint-plugin-prettier": "^3.3.1",
    "jest": "^26.6.3",
    "jest-github-actions-reporter": "^1.0.3",
    "jest-ts-webcompat-resolver": "^1.0.0",
    "prettier": "^2.2.1",
    "ts-jest": "^26.5.1",
    "typedoc": "^0.20.24",
    "typedoc-plugin-markdown": "^3.4.5",
    "typescript": "^4.1.5"
  },
  "prettier": {
    "parser": "typescript",
    "semi": false,
    "singleQuote": true,
    "printWidth": 100
  },
  "commitlint": {
    "extends": [
      "@commitlint/config-angular"
    ],
    "rules": {
      "type-enum": [
        2,
        "always",
        [
          "build",
          "ci",
          "docs",
          "feat",
          "fix",
          "perf",
          "refactor",
          "chore",
          "release",
          "revert",
          "style",
          "test"
        ]
      ]
    }
  },
  "eslintConfig": {
    "parser": "@typescript-eslint/parser",
    "extends": [
      "plugin:@typescript-eslint/recommended",
      "prettier/@typescript-eslint",
      "plugin:prettier/recommended"
    ],
    "ignorePatterns": [
      "*.d.ts"
    ],
    "overrides": [
      {
        "files": [
          "*.spec.ts"
        ],
        "env": {
          "jest": true
        }
      }
    ],
    "rules": {
      "@typescript-eslint/no-use-before-define": 0
    }
  },
  "contributors": [
    {
      "name": "Caleb Boyd",
      "url": "https://github.com/calebboyd"
    }
  ],
  "repository": {
    "url": "https://github.com/calebboyd/redis-x-stream.git"
  },
  "release": {
    "branches": [
      "+([0-9])?(.{+([0-9]),x}).x",
      "main",
      "next",
      "next-major",
      {
        "name": "beta",
        "prerelease": true
      },
      {
        "name": "alpha",
        "prerelease": true
      }
    ],
    "extends": "@calebboyd/semantic-release-config"
  }
}
